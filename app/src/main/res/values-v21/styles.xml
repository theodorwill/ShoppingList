<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShoppingListTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorStatusBar</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/background_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ShoppingListTheme.NoActionBar" parent="ShoppingListTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>